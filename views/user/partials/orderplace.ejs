<body>
    <div class="container my-5 py-5">

        <!--Section: Design Block-->
        <section>
      
          <div class="row">
            <div class="col-md-8">
              <div class="card mb-4">
      
      
                <div class="card-body">
                  <p class="text-uppercase h4 text-font">Delivery Country:</p>
                  <div class="row">
                    <div class="col-md-1">
                      <!-- <img src="https://mdbcdn.b-cdn.net/img/Others/extended-example/usa2.webp"
                        class="rounded-circle me-2" style="width: 35px;" alt="USA" /> -->
                    </div>
                    <div class="col-md-8">
                      <select class="select">
                        <option value="1">India</option>
                        <option value="2">Spain</option>
                        <option value="3">Poland</option>
                        <option value="4">Italy</option>
                        <option value="5">Greece</option>
                        <option value="6">Germany</option>
                        <option value="7">Croatia</option>
                        <option value="8">Sweden</option>
                      </select>
                    </div>
                  </div>
      
      
      
      
                </div>
              </div>
              
      
              <div class="card mb-4">
                <div class="card-body">
                  <p class="text-uppercase fw-bold mb-3 text-font">Address</p>
                  <div class="row">
                    <div class="col-md-4">
                      
                     
                      <p> <%=userdata.houseno +","+ userdata.area +", Pin:"+ userdata.pincode%></p>
                      
                      
                      <p>Place:<%=userdata.place%></p>
                      <p>State:<%=userdata.state%></p>
                      

                     
                    </div>
                    <div class="col-md-7">
                      <a href="/myprofile/changeaddress">  <button type="submit" class="btn btn-outline-primary ms-1">Change Address</button></a> 
                    </div>
                    
                  </div>
                  <div class="changeaddress d-flex align-items-start">
                  <!-- <button type="submit" class="btn-sm btn-outline-dark float-end button-color "
                  data-mdb-ripple-color="dark">
                  Add Address
                </button> -->
            </div>
                </div>
              </div>
            </div>


            <div class="col-md-4 mb-4 position-static">
             
              <div class="card mb-4">
                <div class="card-header py-3">
                  <h5 class="mb-0 text-font"><%=cartdata.length%> Items<span class="float-end mt-1"
                      style="font-size: 13px ;"><a href="/categories/selectproduct/addtocart/makepayment/edit">Edit</a></span></h5>
                </div>
                <div class="card-body">
                  <% if(cartdata.length>0){
        
                    var totamt=0;
                    var distot=0;
                  distot=distot+cartdata[0].discount;

                                             for(let i=0;i<cartdata.length;i++){
                                               totamt=totamt+cartdata[i].amount;
                                               
                                                 %>
                  <div class="row">
                    <div class="col-md-4">
                      <img src="/public/images/adminimage/<%=cartdata[i].productinfo.image[0].filename%>"
                        class="rounded-3" style="width: 100px;" alt="Blue Jeans Jacket" />
                    </div>
                    <div class="col-md-6 ms-3">
                      <span class="mb-0 text-price"> &#8377 <%=cartdata[i].productinfo.price%></span>
                      <p class="mb-0 text-descriptions"><%=cartdata[i].productinfo.item_name%></p>
                      <span class="text-descriptions fw-bold">Categories</span> <span
                        class="text-descriptions fw-bold"><%=cartdata[i].productinfo.categoryName%></span>
                      <p class="text-descriptions mt-0">Qty:<span class="text-descriptions fw-bold"><%=cartdata[i].quantity%></span>
                      </p>
                    </div>
                  </div>
                  <%
                     
                }
                }else{
                %>
    
                    <td colspan="5">No Products In the list</td>
                <%
                }
                %>
                  <div class="card-footer mt-4">
                    <ul class="list-group list-group-flush">
                      <li
                        class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0 text-muted">
                        Subtotal
                        <span>&#8377 <%=totamt+distot%></span>
                      </li>
                      <li
                      class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0 text-muted">
                      Coupon Discount
                      <span>&#8377 <%=distot%></span>
                    </li>
                      
                      <li
                        class="list-group-item d-flex justify-content-between align-items-center px-0 fw-bold text-uppercase">
                        Total to pay
                        <span>&#8377 <%=totamt%></span>
                      </li>
                    </ul>
                  </div>
      
      
                </div>
              </div>
             
            </div>
      
            <div class="col-md-8 mb-4">
              <div class="card mb-4">
                <div class="card-header py-3">

                  <h5 class="mb-0 text-font text-uppercase">Payment Mode</h5>
                </div>
                <div class="card-body">
                  <form action="/onlinePaypal" method="POST">
                <div>
                    <div class="form-check form-check-inline mb-0 me-4">
                      <input type="radio" name="paymode" value="cod" id="cod" checked>Cash on Delivery <br>
                      <input type="radio" name="paymode" value="onlilne" id="paymodeonlilne">Online Payment
                 

                    </div>
                     
                    </div>
                    <br>
      
                   
      
                    <div class="form-check form-check-inline mb-0 me-4">
                       
                    </div>
      
                   
      
      
                    
                 
                </div>
      
              </div>
              <div class="text-center">
            
                <button id="placeorder" type="submit" name="placeorder" class="btn btn-lg btn-danger button-order col-md-10"> Place order</button>
                
              </div>
            </form>
              
            </div>
      
      
      
      
      
      
          </div>
      
        </section>
        <!--Section: Design Block-->
      
      </div>

